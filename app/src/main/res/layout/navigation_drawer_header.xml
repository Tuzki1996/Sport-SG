<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/drawerHeader"
    android:layout_height="180dp"
    android:background="@color/bluegrey">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/ssg"
        android:id="@+id/Logo"
        />
    <TextView
        android:text=""
        android:textColor="@color/lightbluegrey"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Logo"
        android:layout_marginLeft="10dp"
        android:id="@+id/tAccountInfo" />
    <TextView
        android:text=""
        android:textColor="@color/lightbluegrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tAccountInfo"
        android:layout_marginLeft="10dp"
        android:id="@+id/tName" />

    <TextView
        android:text=""
        android:textColor="@color/lightbluegrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tAccountInfo"
        android:layout_toRightOf="@id/tName"
        android:layout_marginLeft="5dp"
        android:id="@+id/tFirstName" />


    <TextView
        android:text=""
        android:textColor="@color/lightbluegrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tLastName"
        android:layout_toRightOf="@id/tFirstName"
        android:layout_below="@id/tAccountInfo"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:text=""
        android:textColor="@color/lightbluegrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tFirstName"
        android:layout_marginLeft="10dp"
        android:id="@+id/tEmail" />
    <TextView
        android:text=""
        android:textColor="@color/lightbluegrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tFirstName"
        android:layout_toRightOf="@id/tEmail"
        android:layout_marginLeft="5dp"
        android:id="@+id/tEmalAdd" />


</RelativeLayout>